---
// src/pages/projects/FirstProject.astro
import Layout from "../../layouts/Layout.astro";
import ArrowDown from "../../components/ArrowDown.astro";

const title = "Renders y Gráficos";
const srcImg = "/RendersYGraficos/renYgraf4.webp";
---

<Layout {title}>
  <main class="bg-zinc-50 overflow-x-hidden">
    <section class="h-screen flex flex-col relative px-4 md:px-20">
      <div class="flex-1 flex justify-center items-center pt-10">
        <div class="relative group w-full h-full max-h-[65vh] md:max-h-[85vh]">
          <div
            class="absolute -inset-2 border border-zinc-200 -z-10 translate-x-2 translate-y-2"
          >
          </div>
          <img
            src={srcImg}
            class="h-full w-full object-cover shadow-2xl rounded-sm"
            alt={title}
          />
        </div>
      </div>

      <div class="h-24 flex flex-col items-center justify-center">
        <span class="text-[10px] uppercase tracking-[0.4em] text-zinc-400 mb-2"
          >Proyecto 03</span
        >
        <a
          href="#galeria"
          class="hover:text-naranja transition-colors duration-300 animate-bounce"
        >
          <ArrowDown />
        </a>
      </div>
    </section>

    <section
      id="galeria"
      class="max-w-7xl mx-auto px-6 md:px-20 py-12 md:py-20"
    >
      <div
        class="flex flex-col md:flex-row md:items-end justify-between border-b border-zinc-200 pb-10 mb-16"
      >
        <div class="max-w-3xl">
          <span
            class="text-naranja font-bold text-xs md:text-sm tracking-[0.3em] uppercase"
            >Visualización Arquitectónica</span
          >
          <h1
            class="text-5xl md:text-8xl font-forum text-black mt-2 leading-tight uppercase"
          >
            {title}
          </h1>
        </div>
        <p
          class="text-zinc-400 text-[10px] md:text-sm mt-4 md:mt-0 tracking-[0.2em] uppercase italic font-light"
        >
          Archviz / Post-producción
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 items-center">
        <div class="group relative overflow-hidden rounded-xl shadow-lg">
          <img
            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            src="/RendersYGraficos/renYgraf1.webp"
            alt="Visualización 1"
          />
          <div
            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </div>

        <div
          class="group relative overflow-hidden rounded-xl shadow-lg md:mt-20"
        >
          <img
            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            src="/RendersYGraficos/renYgraf2.webp"
            alt="Visualización 2"
          />
          <div
            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </div>

        <div
          class="group relative overflow-hidden rounded-xl shadow-lg lg:col-span-2 max-w-5xl mx-auto"
        >
          <img
            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            src="/RendersYGraficos/renYgraf3.webp"
            alt="Visualización 3"
          />
          <div
            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </div>

        <div class="group relative overflow-hidden rounded-xl shadow-lg">
          <img
            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            src="/RendersYGraficos/renYgraf5.webp"
            alt="Visualización 5"
          />
          <div
            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </div>

        <div
          class="group relative overflow-hidden rounded-xl shadow-lg md:-mt-20"
        >
          <img
            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            src="/RendersYGraficos/renYgraf6.webp"
            alt="Visualización 6"
          />
          <div
            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </div>
      </div>

      <div class="mt-32 text-center border-t border-zinc-100 pt-16">
        <p class="font-forum text-2xl text-zinc-400 italic">
          "La luz y la materia como lenguaje visual."
        </p>
      </div>
    </section>
  </main>
</Layout>
