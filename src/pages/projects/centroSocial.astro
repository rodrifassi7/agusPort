---
// src/pages/projects/FirstProject.astro

import Layout from "../../layouts/Layout.astro";
const title = "Centro social de salud y deporte";
---

<Layout {title}>
  <div class="overflow-hidden rounded-lg md:h-96 h-screen">
    <img
      src="/public//cuartoProject.webp"
      class="relative block max-w-full h-auto -translate-x-1/2 -translate-y-1/3 top-1/2 left-1/2"
      alt="Gráficos esquemáticos"
    />
  </div>

  <body>
    <div class="text-center text-black m-14">
      <h1 class="text-4xl">{title}</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 p-16">
      <div class="grid gap-2">
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro1.webp"
            alt=""
          />
        </div>
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro2.webp"
            alt=""
          />
        </div>
      </div>
      <div class="grid gap-3">
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro5.webp"
            alt=""
          />
        </div>
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro6.webp"
            alt=""
          />
        </div>
      </div>
      <div class="grid gap-3">
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro7.webp"
            alt=""
          />
        </div>
      </div>
      <div class="grid gap-3">
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro4.webp"
            alt=""
          />
        </div>

        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="/public/centro3.webp"
            alt=""
          />
        </div>
      </div>
    </div>
  </body>
</Layout>
