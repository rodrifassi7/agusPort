---
// src/pages/projects/Tesis.astro
import Layout from "../../layouts/Layout.astro";
import ArrowDown from "../../components/ArrowDown.astro";

const title = "Tesis: Bienestar Modular";
const srcImg = "/Tesis/AXO.webp";
---

<Layout {title}>
  <main class="bg-zinc-50 overflow-x-hidden">
    <section class="h-screen flex flex-col relative px-4 md:px-20">
      <div class="flex-1 flex justify-center items-center pt-10">
        <div class="relative w-full h-full max-h-[65vh] md:max-h-[80vh]">
          <div
            class="absolute -inset-2 border border-zinc-200 -z-10 translate-x-2 translate-y-2"
          >
          </div>
          <img
            src={srcImg}
            class="h-full w-full object-contain md:object-cover shadow-2xl rounded-sm bg-white"
            alt={title}
          />
        </div>
      </div>

      <div class="h-24 flex flex-col items-center justify-center">
        <span class="text-[10px] uppercase tracking-[0.4em] text-zinc-400 mb-2"
          >Proyecto Final</span
        >
        <a
          href="#experiencia"
          class="hover:text-naranja transition-colors duration-300 animate-bounce"
        >
          <ArrowDown />
        </a>
      </div>
    </section>

    <section
      id="experiencia"
      class="max-w-7xl mx-auto px-6 md:px-20 py-12 md:py-20"
    >
      <div
        class="flex flex-col md:flex-row md:items-end justify-between border-b border-zinc-200 pb-10 mb-16"
      >
        <div class="max-w-3xl">
          <span
            class="text-naranja font-bold text-xs md:text-sm tracking-[0.3em] uppercase"
            >Investigación Académica 01</span
          >
          <h1
            class="text-5xl md:text-7xl lg:text-8xl font-forum text-black mt-2 leading-tight uppercase"
          >
            {title}
          </h1>
        </div>
        <p
          class="text-zinc-400 text-[10px] md:text-sm mt-4 md:mt-0 tracking-[0.2em] uppercase italic font-light"
        >
          Arquitectura / Módulos / Salud
        </p>
      </div>

      <div class="flex flex-col gap-8 md:gap-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
          <img
            class="w-full h-auto object-cover rounded-xl shadow-sm border border-zinc-100"
            src="/Tesis/SITUACION1.webp"
            alt="Situación 1"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-sm border border-zinc-100"
            src="/Tesis/SITUACION2.webp"
            alt="Situación 2"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-sm border border-zinc-100"
            src="/Tesis/SITUACION3.webp"
            alt="Situación 3"
          />
        </div>

        <div class="h-px w-full bg-zinc-200 my-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-10">
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis1.webp"
            alt="Tesis 1"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis2.webp"
            alt="Tesis 2"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis3.webp"
            alt="Tesis 3"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis4.webp"
            alt="Tesis 4"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis5.webp"
            alt="Tesis 5"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis6.webp"
            alt="Tesis 6"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis7.webp"
            alt="Tesis 7"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis8.webp"
            alt="Tesis 8"
          />
          <img
            class="w-full h-auto object-cover rounded-xl shadow-md"
            src="/Tesis/tesis9.webp"
            alt="Tesis 9"
          />

          <div class="md:col-span-2 mt-4">
            <img
              class="w-full h-auto object-cover rounded-xl shadow-lg"
              src="/Tesis/tesis10.webp"
              alt="Tesis Final"
            />
          </div>
        </div>
      </div>

      <div class="mt-24 pt-10 border-t border-zinc-200 text-center">
        <p class="text-zinc-400 text-xs uppercase tracking-widest">
          Fin del Proyecto 01
        </p>
      </div>
    </section>
  </main>
</Layout>
